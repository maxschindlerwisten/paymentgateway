{
    "name": "go-fresh/ecommerce-backend",
    "description": "Go-Fresh E-commerce Backend with ÄŒSOB Payment Gateway and Airtable Integration",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GoFresh\\": "src/"
        }
    },
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.0",
        "firebase/php-jwt": "^6.0",
        "ramsey/uuid": "^4.0",
        "twig/twig": "^3.0",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "cs-check": "phpcs --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true
    }
}