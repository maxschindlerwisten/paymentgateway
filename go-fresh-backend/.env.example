# Go-Fresh E-commerce Backend Configuration

# Database Configuration (if needed for caching/sessions)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=go_fresh
DB_USER=root
DB_PASS=

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_PRODUCTS_TABLE=Products

# ÄŒSOB Payment Gateway Configuration
CSOB_MERCHANT_ID=your_merchant_id_here
CSOB_API_URL=https://iapi.iplatebnibrana.csob.cz/api/v1.9
CSOB_PRIVATE_KEY_PATH=./config/merchant.key
CSOB_PUBLIC_KEY_PATH=./config/mips_iplatebnibrana.csob.cz.pub
CSOB_PRIVATE_KEY_PASSWORD=
CSOB_PUBLIC_KEY_PASSWORD=

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=https://api.go-fresh.com
FRONTEND_URL=https://go-fresh.framer.website

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_for_framer_integration

# Logging
LOG_LEVEL=info
LOG_PATH=./logs/

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Email Configuration (for order confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@go-fresh.com